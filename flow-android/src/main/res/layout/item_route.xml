<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_outline"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:textAppearance="?textAppearanceBody1"
        tools:text="Bad Vilbel\nAlte Frankfurter Straße\n\n+1 intermediate stop\n\nMünchen\nHauptbahnhof" />

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="12dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_favorite_border_24dp"
        app:tint="?colorOnSurface" />

    <com.xfinity.dahdit.DottedLine
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:dotColor="@color/divider"
        app:dotRadius="3dp"
        app:minimumDotGap="8dp"
        app:orientation="vertical" />

</FrameLayout>