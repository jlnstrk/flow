<?xml version="1.0" encoding="utf-8"?>
<de.julianostarek.flow.ui.common.view.base.EffectivelyWrappingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_surface_dark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <de.julianostarek.flow.ui.common.time.TimeView
        android:id="@+id/departure_time"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal|bottom"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceBody2"
        app:displayDistant="absolute_absolute"
        app:displayMultiline="true"
        app:displayNear="absolute_absolute"
        tools:text="07:21\n07:28" />

    <de.julianostarek.flow.ui.main.trips.results.timeline.trip.TimelineTripView
        android:id="@+id/trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <de.julianostarek.flow.ui.common.time.TimeView
        android:id="@+id/arrival_time"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceBody2"
        app:displayDistant="absolute_absolute"
        app:displayMultiline="true"
        app:displayNear="absolute_absolute"
        tools:text="11:38\n11:39" />

</de.julianostarek.flow.ui.common.view.base.EffectivelyWrappingLinearLayout>