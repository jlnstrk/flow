<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame
        android:id="@+id/location_container"
        style="@style/Widget.Sequence.BackdropField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:transitionName="@string/tn_backdrop_field_1">

        <TextView
            android:id="@+id/location_text"
            style="@style/Widget.Sequence.TextView.BackdropField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_hint_choose_location"
            android:paddingEnd="56dp"
            android:transitionName="@string/tn_stops_location"
            app:drawableStartCompat="@drawable/ic_location_24dp"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/location_dismiss"
            style="@style/Widget.Sequence.ImageButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_24dp"
            app:tint="?attr/colorOnPrimaryLightSurfaceLight"
            tools:visibility="visible" />

    </de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame>

    <de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame
        android:id="@+id/mode_container"
        style="@style/Widget.Sequence.BackdropField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:transitionName="@string/tn_backdrop_field_2">

        <TextView
            android:id="@+id/mode_text"
            style="@style/Widget.Sequence.TextView.BackdropField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="@string/tn_stops_mode"
            app:drawableStartCompat="@drawable/ic_station_24dp"
            tools:text="Show Departures" />

    </de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame>

    <de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame
        android:id="@+id/time_container"
        style="@style/Widget.Sequence.BackdropField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:transitionName="@string/tn_backdrop_field_3">

        <TextView
            android:id="@+id/time_text"
            style="@style/Widget.Sequence.TextView.BackdropField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="@string/tn_stops_time"
            app:drawableStartCompat="@drawable/ic_time_24dp"
            tools:text="Now" />

    </de.julianostarek.flow.ui.common.view.base.VolatileTransitionFrame>

    <LinearLayout
        android:id="@+id/stops_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:transitionGroup="true"
        android:transitionName="@string/tn_section_settings">

        <include layout="@layout/include_products_bar" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:dividerInsetEnd="24dp"
            app:dividerInsetStart="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:textAppearance="?textAppearanceSubtitle2"
                app:drawableStartCompat="@drawable/ic_timelapse_24dp"
                app:drawableTint="?attr/colorOnPrimarySurface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="60-minute Intervals" />

            <ImageButton
                android:id="@+id/duration_decrease_button"
                style="@style/Widget.Sequence.ImageButton.Icon.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_remove_24dp"
                app:tint="?attr/colorOnPrimarySurface" />

            <ImageButton
                android:id="@+id/duration_increase_button"
                style="@style/Widget.Sequence.ImageButton.Icon.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:srcCompat="@drawable/ic_add_24dp"
                app:tint="?attr/colorOnPrimarySurface" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>