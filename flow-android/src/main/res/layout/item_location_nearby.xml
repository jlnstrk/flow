<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/distance"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginStart="?attr/keyline"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:maxWidth="40dp"
        android:textAppearance="?textAppearanceCaption"
        app:drawableTint="?colorOnSurface"
        app:drawableTopCompat="@drawable/ic_near_me_24dp"
        tools:text="7 km" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/keylinePlus56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="?attr/keyline"
        android:layout_marginBottom="16dp"
        android:textAppearance="?textAppearanceSubtitle1"
        tools:text="Bad Vilbel Alte Frankfurter StraÃŸe" />

</FrameLayout>